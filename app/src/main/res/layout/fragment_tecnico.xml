<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.principal.view.fragments.TecnicoFragment"
    android:background="#E6E7E8">

    <LinearLayout
        android:id="@+id/llytBarraNav"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#373b4d"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_users" />

        <ImageView
            android:id="@+id/imgLogoEasyWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/logo_cabecera" />

        <ImageView
            android:id="@+id/imgCerrarSesion"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/cerrar_sesion" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llytSolicitudes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llytBarraNav">

        <LinearLayout
            android:id="@+id/llytSolicitudesDirectas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/bg_rectangular">

            <TextView
                android:id="@+id/txtSolicitudesDirectas"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/solicitudesDirectas"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNumSolicitudesDirectas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numSolicitudesDirectas"
                android:gravity="center"
                android:textSize="70dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtResponderSolicitudesDirectas"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded"
                android:gravity="center"
                android:backgroundTint="#2E3BB7"
                android:text="@string/responderSolicitudesDirectas"
                android:textColor="@color/tipografia_boton_login"
                android:textSize="17sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llytSolicitudesGenerales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/bg_rectangular">

            <TextView
                android:id="@+id/txtSolicitudesGenerales"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/solicitudesGenerales"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNumSolicitudesGenerales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numSolicitudesDirectas"
                android:gravity="center"
                android:textSize="70sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtResponderSolicitudesGenerales"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded"
                android:gravity="center"
                android:backgroundTint="#2E3BB7"
                android:text="@string/responderSolicitudesDirectas"
                android:textColor="@color/tipografia_boton_login"
                android:textSize="17sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>